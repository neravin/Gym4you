<h1>Listing affiliates</h1>

<table>
  <thead align="left">
    <tr>
      <th>Gymnasium</th>
      <th>Name</th>
      <th>City</th>
      <th>Address</th>
      <!--th>Price</th-->
      <th>Phone</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @affiliates.each do |affiliate| %>
      <tr class = "<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class = "title"><%= affiliate.gymnasium.title %></td>
        <td class = "name"><%= affiliate.name %></td>
        <td><%= affiliate.city %></td>
        <td class = "list_descriprion"><%= affiliate.address %></td>
        <td><%= affiliate.phone %></td>
        <td><%= affiliate.latitude.round(2) %></td>
        <td><%= affiliate.longitude.round(2) %></td>
        <td><%= link_to 'Show', affiliate %><br/>
        <%= link_to 'Edit', edit_affiliate_path(affiliate) %><br/>
        <%= link_to 'Destroy', affiliate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Affiliate', new_affiliate_path, class: "button middle_green" %>